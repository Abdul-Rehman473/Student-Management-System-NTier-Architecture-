@model List<SMS_Objects.studentBO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Students";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Student Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Students</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Students</h3>
                        <div class="card-tools">
                            <a asp-action="StudentForm" asp-controller="Student" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i> Add New Student
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone No</th>
                                    <th>Age</th>
                                    <th>Semester</th>
                                    <th>CGPA</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in Model)
                                {
                                    <tr>
                                        <td>@s.Name</td>
                                        <td>@s.Email</td>
                                        <td>@s.PhoneNo</td>
                                        <td>@s.Age</td>
                                        <td>@s.Semester</td>
                                        <td>
                                            <span class="badge bg-@(s.CGPA >= 3.0 ? "success" : s.CGPA >= 2.0 ? "warning" : "danger")">
                                                @s.CGPA
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@s.Id">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="StudentForm" class="btn btn-warning btn-sm" asp-route-id="@s.Id">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@s.Id"
                                                   onclick="return confirm('Are you sure you want to delete this student?');">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "responsive": true,
            });
        });
    </script>
}
